@model IEnumerable<GlamourHub.Models.Brand>

@{
    ViewData["Title"] = "Brands";
}

@await Html.PartialAsync("_AdminNavbar")

<div class="row py-3">
    <div class="col-md-6">
        <h2>Brands</h2>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary mb-3 float-end" asp-area="" asp-controller="Brand" asp-action="AddBrand">Add New Brand</a>
    </div>
</div>

<table class="table table-striped">
    <thead class="card-header">
        <tr>
            <th>Brand Name</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@brand.Name</td>
                <td>@brand.CreatedAt</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-area="" asp-controller="Brand" asp-action="EditBrand" asp-route-id="@brand.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-area="" asp-controller="Brand" asp-action="DeleteBrand" asp-route-id="@brand.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row mt-3">
    <div class="col-md-12 text-center">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (var i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("BrandList", new { page = i })">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
