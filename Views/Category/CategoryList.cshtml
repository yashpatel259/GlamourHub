@model IEnumerable<GlamourHub.Models.Category>

@await Html.PartialAsync("_AdminNavbar")

<div class="row py-3">
    <div class="col-md-6">
        <h2>Categories</h2>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary mb-3 float-end" asp-area="" asp-controller="Category" asp-action="AddCategory">Add New Category</a>
    </div>
</div>

<table class="table table-striped">
    <thead class="card-header">
        <tr>
            <th>Category Name</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.CreatedAt</td>
                <td>
                    <div class="d-flex">
                        <a class="btn btn-sm btn-primary me-2" asp-area="" asp-controller="Category" asp-action="EditCategory" asp-route-id="@category.Id">Edit</a>
                        <form method="post" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@category.Id">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row mt-3">
    <div class="col-md-12 text-center">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (var i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("CategoryList", new { page = i })">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
