<div class="row py-3">
    <div class="col-md-6">
        <h2>Products</h2>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary mb-3 float-end" asp-area="" asp-controller="Product" asp-action="AddProduct">Add New Product</a>
    </div>
</div>

<table class="table table-striped table-responsive-md">
    <thead class="card-header">
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Brand</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Category?.Name</td>
                <td>@product.Brand?.Name</td>
                <td>@product.CreatedAt</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-area="" asp-controller="Product" asp-action="EditProduct" asp-route-id="@product.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-area="" asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
