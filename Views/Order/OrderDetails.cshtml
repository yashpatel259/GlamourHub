@model GlamourHub.Models.Order

<h1>Order Details</h1>

<p>Order ID: @Model.Id</p>
<p>Customer Name: @Model.FirstName @Model.LastName</p>
<p>Shipping Address: @Model.Street, @Model.City, @Model.State, @Model.PostalCode, @Model.Country</p>
<p>Phone: @Model.Phone</p>
<p>Total Amount: @Model.TotalAmount</p>
<p>Tax Amount: @Model.TaxAmount</p>
<p>Delivery Amount: @Model.DeliveryAmount</p>
<p>Grand Total: @Model.GrandTotal</p>
<p>Is Free Shipping: @Model.IsFreeShipping</p>
<p>Order Date: @Model.OrderDate</p>

<h2>Order Items</h2>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.order_items)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@(item.Quantity * item.Price)</td>
            </tr>
        }
    </tbody>
</table>
