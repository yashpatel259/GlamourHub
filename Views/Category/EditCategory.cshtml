@model GlamourHub.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

@await Html.PartialAsync("_AdminNavbar")

<h2 class="text-center">Edit Category</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    @Html.ValidationSummary()

                    @using (Html.BeginForm("EditCategory", "Category", FormMethod.Post, new { @class = "needs-validation", @novalidate = "true" }))
                    {
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            <label for="Name">Category Name</label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
                        </div>

                        <div class="form-group text-center pt-2">
                            <input type="submit" value="Save" class="btn btn-primary" />

                            <a asp-action="CategoryList" class="btn btn-primary">Cancel</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
