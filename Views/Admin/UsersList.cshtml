@model IEnumerable<GlamourHub.Models.User>

@{
    ViewData["Title"] = "Users";
}
@await Html.PartialAsync("_AdminNavbar")

<h2>Users</h2>

<a class="btn btn-primary mb-3" asp-area="" asp-controller="Admin" asp-action="AddUser">Add New User</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Lastname</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-area="" asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-area="" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
