@model GlamourHub.Models.Login

@{
    ViewData["Title"] = "Login";
    bool showResendVerification = ViewData["ShowResendVerification"] != null && (bool)ViewData["ShowResendVerification"];
}

<h2 class="text-center">Login</h2>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-controller="Login" asp-action="Index" method="post">
            <div class="form-group mb-2">
                <label for="username">Username</label>
                <input type="text" class="form-control" id="username" name="Username">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="password">Password</label>
                <input type="password" class="form-control mb-2" id="password" name="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["ErrorMessage"]
                </div>
            }
            @if (showResendVerification) 
            {
                <div class="form-group mb-2">
                    <a asp-action="ResendVerificationEmail" asp-controller="Login" class="text-decoration-none me-2">Resend Verification Email</a>
                </div>
            }
            <div class="form-group mb-2">
                <a class="text-decoration-none me-2" asp-area="" asp-controller="Register" asp-action="Index">Don't have an account? Register now</a>
            </div>

            <button type="submit" class="btn btn-primary">Log in</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>
