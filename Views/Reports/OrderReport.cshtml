@model List<OrderDetail>

@{
    ViewData["Title"] = "Order Reports";
}
@await Html.PartialAsync("_AdminNavbar")

<div class="row py-3">
    <div class="col-md-6">
        <h2>Order Details Report</h2>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary mb-3 float-end" asp-area="" asp-controller="Reports" asp-action="Print">Export <img src="~/images/icons8-pdf-48.png" height="25px" /></a>
    </div>
</div>

<table class="table table-striped table-responsive-md">
    <thead class="card-header">
        <tr>
            <th>Order No.</th>
            <th>Name</th>
            <th>Address</th>
            <th>Country</th>
            <th>Phone</th>
            <th>Order Date</th>
            <th>Product</th>
            <th>Price</th>
            <th>QTY</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.orderid</td>
                <td>@order.FirstName @order.LastName</td>
                <td>@order.Street @order.City @order.State @order.PostalCode</td>
                <td>@order.Country</td>
                <td>@order.Phone</td>
                <td>@order.OrderDate</td>
                <td>@order.productname</td>
                <td>@order.productprice</td>
                <td>@order.quantity</td>
                <td>@order.GrandTotal</td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-md-12">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= (int)ViewData["TotalPages"]; i++)
                {
                    <li class="page-item @(i == (int)ViewData["CurrentPage"] ? "active" : "")">
                        <a class="page-link" href="?page=@i&pageSize=@ViewData["PageSize"]">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
