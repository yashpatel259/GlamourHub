@model GlamourHub.Models.Product

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    @Html.ValidationSummary()

                    @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { @class = "needs-validation", @novalidate = "true" }))
                    {
                            <div class="form-group">
                                <label for="ProductName">Product Name</label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
                            </div>
                            <div class="form-group">
                                <label for="Description">Description</label>
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "3", required = "required" })
                            </div>
                            <div class="form-group">
                                <label for="Price">Price</label>
                            @Html.TextBoxFor(model => model.Price, new { @class = "form-control", type = "number", required = "required" })
                            </div>
                            <div class="form-group">
                                <label for="Category">Category</label>
                            @Html.TextBoxFor(model => model.Category, new { @class = "form-control", required = "required" })
                            </div>
                            <div class="form-group">
                                <label for="Brand">Brand</label>
                            @Html.TextBoxFor(model => model.Brand, new { @class = "form-control", required = "required" })
                            </div>
                            <div class="form-group">
                                <label for="CreatedAt">Created At</label>
                            @Html.TextBoxFor(model => model.CreatedAt, new { @class = "form-control", @readonly = "readonly" })
                            </div>

                            <div class="form-group text-center">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
