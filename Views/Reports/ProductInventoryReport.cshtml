@model List<GlamourHub.Models.ProductInventory>

@{
    ViewData["Title"] = "Product Inventory";
}
@await Html.PartialAsync("_AdminNavbar")

<div class="row py-3">
    <div class="col-md-6">
        <h2>Product Inventory Report</h2>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary mb-3 float-end" asp-area="" asp-controller="Reports" asp-action="PrintProductInventory">Export <img src="~/images/icons8-pdf-48.png" height="25px" /></a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="card-header">
            <tr>
                <th>Product Name</th>
                <th>In Stock</th>
                <th>Sold Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.InStock</td>
                    <td>@product.SoldQuantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="row">
    <div class="col-md-12">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= (int)ViewData["TotalPages"]; i++)
                {
                    <li class="page-item @(i == (int)ViewData["CurrentPage"] ? "active" : "")">
                        <a class="page-link" href="?page=@i&pageSize=@ViewData["PageSize"]">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

