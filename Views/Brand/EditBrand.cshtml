@model GlamourHub.Models.Brand

@{
    ViewData["Title"] = "Edit Brand";
}

@await Html.PartialAsync("_AdminNavbar")

<h2 class="text-center">Edit Brand</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("EditBrand", "Brand", FormMethod.Post))
                    {
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            <label for="name">Brand Name</label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group text-center pt-2">
                            <button type="submit" class="btn btn-primary">Update</button>

                            <a asp-action="BrandList" class="btn btn-primary">Cancel</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
